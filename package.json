{
    "name": "rcon-monitor",
    "version": "1.0.0",
    "description": "RCON-based game server monitor with Home Assistant integration",
    "main": "dist/index.js",
    "scripts": {
      "start": "ts-node src/index.ts",
      "build": "tsc",
      "dev": "nodemon src/index.ts"
    },
    "dependencies": {
      "srcds-rcon": "^2.1.0",          // For ARK: Survival Evolved RCON
      "express": "^4.18.2",          // Web dashboard backend
      "minecraft-protocol": "^1.41.1", // Minecraft RCON
      "mqtt": "^5.3.2",              // Home Assistant MQTT integration
      "ws": "^8.16.0"                // WebSocket server
    },
    "devDependencies": {
      "@types/node": "^20.11.7",     // Type definitions for Node.js
      "@types/ws": "^8.5.10",        // Type definitions for WebSocket
      "ts-node": "^10.9.2",          // Run TypeScript directly
      "typescript": "^5.3.3",        // TypeScript compiler
      "nodemon": "^3.0.3"            // Auto-restart on changes (optional)
    },
    "engines": {
      "node": ">=20.0.0"             // Requires Node.js 20+
    }
  }